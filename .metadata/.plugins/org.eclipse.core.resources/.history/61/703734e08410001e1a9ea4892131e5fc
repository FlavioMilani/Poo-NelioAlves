package course;

import java.util.Scanner;

/*
 * Fazer um programa para ler as medidas dos lados de dois triângulos X e Y (suponha medidas
válidas). Em seguida, mostrar o valor das áreas dos dois triângulos e dizer qual dos dois triângulos
possui a maior área.
A fórmula para calcular a área de um triângulo a partir das medidas de seus lados a, b e c é a
seguinte (fórmula de Heron):
*/

public class ProgramWithoutOO {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		double sideAA, sideBB, sideCC, sideA, sideB, sideC;
		
		System.out.println("Coloca as medidas dos lados do triângulo X ");
		sideA = sc.nextDouble();
		sideB = sc.nextDouble();
		sideC = sc.nextDouble();
		
		System.out.println("Coloca as medidas dos lados do triângulo Y: ");
		sideAA = sc.nextDouble();
		sideBB = sc.nextDouble();
		sideCC = sc.nextDouble();
		
		sc.close();
		
		double periX = (sideA + sideB + sideC) / 2;
		double areaX = Math.sqrt(periX * (periX - sideA) * (periX - sideB) * (periX - sideC));
		
		double periY = (sideAA + sideBB + sideCC) / 2;
		double areaY = Math.sqrt(periY * (periY - sideAA) * (periY - sideBB) * (periY - sideCC));
		
		System.out.println("Area do triângulo X = " + String.format("%.4f", areaX));
		System.out.println("Area do triângulo Y= " + String.format("%.4f", areaY));
		
		if(areaX > areaY) {
			System.out.println("A area maior : triângulo X");
		} else {
			System.out.println("A area maior : triângulo Y");
		}
	}
	
}
