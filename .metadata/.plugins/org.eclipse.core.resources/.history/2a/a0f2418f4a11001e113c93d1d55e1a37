package br.com.fj.pooneliaalves.application;

import java.util.Scanner;

import br.com.fj.pooneliaalves.entities.Bank;
import br.com.fj.pooneliaalves.util.Transactions;

public class Program {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner sc = new Scanner(System.in);
		Bank account;
		
		System.out.print("Entre com o número da conta: ");
		String accountNum = sc.nextLine();
		
		System.out.print("Entre com o nome do titular: ");
		String accountOwn = sc.nextLine();
		
		System.out.println("Terá um deposito inicial? ");
		char initDeposit = sc.next().charAt(0);
		double initialValue;
		
		
		
		if(initDeposit == 'S' || initDeposit == 's') {
			System.out.println("Entre com o valor do deposito inicial: ");
			initialValue = sc.nextDouble();
			
			account = new Bank(accountNum, accountOwn, initialValue);
			account.setBalance(initialValue);
		} else {
			initialValue = 0;
			account = new Bank(accountNum, accountOwn);
		}
		
		System.out.println(account.showAccountInfo());
		Transactions trans = new Transactions();
		
		
		System.out.print("Entre com o valor de deposito: ");
		double deposit = sc.nextDouble();
		trans.deposit(deposit);
		System.out.println("In" + account.showAccountInfo());
		
		System.out.print("Entre com o valor de saque: ");
		double withdraw = sc.nextDouble();
		System.out.println("In" + account.showAccountInfo());
		
		
		sc.close();
	}

}
