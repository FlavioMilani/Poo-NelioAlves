package course;

import java.util.Scanner;

public class ProgramWithoutOO {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		double sideAA, sideBB, sideCC, sideA, sideB, sideC;
		
		System.out.println("Coloca as medidas dos lados do tri창ngulo X ");
		sideA = sc.nextDouble();
		sideB = sc.nextDouble();
		sideC = sc.nextDouble();
		
		System.out.println("Coloca as medidas dos lados do tri창ngulo Y: ");
		sideAA = sc.nextDouble();
		sideBB = sc.nextDouble();
		sideCC = sc.nextDouble();
		
		double periX = (sideA + sideB + sideC) / 2;
		double areaX = Math.sqrt(periX * (periX - sideA) * (periX - sideB) * (periX - sideC));
		
		double periY = (sideA + sideB + sideC) / 2;
		double areaY = Math.sqrt(periY * (periY - sideAA) * (periY - sideBB) * (periY - sideCC));
		
		System.out.println("Area do tri창ngulo X = " + String.format("%.4f", areaX));
		System.out.println("Area do tri창ngulo Y= " + String.format("%.4f", areaY));
	}

}
